%h1 Listing email_templates

%table
  %thead
    %tr
      %th Title
      %th Body
      %th
      %th
      %th

  %tbody
    - @email_templates.each do |email_template|
      %tr
        %td= email_template.title
        %td= email_template.body
        %td= link_to 'Show', email_template
        %td= link_to 'Edit', edit_email_template_path(email_template)
        %td= link_to 'Destroy', email_template, method: :delete, data: { confirm: 'Are you sure?' }

