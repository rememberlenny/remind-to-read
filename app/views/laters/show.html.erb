<div class='large-3 column medium-3'>
  <%= render 'layouts/side_nav' %>
</div>
<div class='large-9 column medium-9'>
  <%= image_tag @later.image_url %>
  <% if !@later.title.empty? %>
    <h1>
      <%= @later.title %>
    </h1>
  <% else %>
    <h1>
      <%= shorten_url_text(@later.url, 40, '...') %>
    </h1>
  <% end %>
  <p>
    <%= @later.description %>
  </p>
  <%= distance_of_time_in_words(Time.now.utc, @later.destined_at) %>
  from now
  <br>
  <%= @later.destined_at.strftime("%D %I:%M") %>
  <hr>
  <%= @later.to_json %>
  <p>
    You are logged in.
  </p>
</div>