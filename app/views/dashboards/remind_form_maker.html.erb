<div class="max-w-6xl self-center content-center">
  <div class="max-w-4xl self-center mx-auto">
    <div class="w-full">
      <div class="flex w-full ">
        <h1 class="text-2xl font-bold">Reminder form</h1>
      </div>
      
      <div class="flex mb-8">
        <% @remind_forms.each do |form| %>
          <div class="max-w-sm rounded overflow-hidden shadow-lg">
            <div class="px-6 pt-4">
              <div class="font-bold text-xl"><%= form.title %></div>
            </div>
            <div class="px-6 py-4">
              <% if form.can_be_changed === true %>
                <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">Edit</span>
              <% end %>
              <%= link_to remind_form_path(form) do %>
                <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">Preview</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div> 
  <div class="flex w-full mb-4">

  </div> 
</div>
