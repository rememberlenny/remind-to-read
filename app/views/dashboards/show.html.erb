<div class="md:w-2/3 lg:w-1/2 xl:1/3 max-w-xl self-center">
  <div class="flex w-full bg-gray-100 px-4 pt-4 mb-4">
    <div class="w-full">
      <div class="flex w-full ">
        <div class="w-1/2">
          <h1 class="text-2xl font-bold">Subscriber email</h1>
        </div>
      </div>
      
      <div class="flex mb-4">
        <p class="text-3xl font-bold">
          <%= @remind_user.email %>
        </p>
      </div>
    </div>
  </div> 
  <div class="w-full pb-8 mt-8">
    <div class="flex w-full ">
      <h1 class="text-2xl font-bold mb-4">Subscriber's reminders</h1>
    </div>
    <% @remind_user_laters.each do |later| %>
      <div class="w-full rounded overflow-hidden shadow-lg px-4 py-4 mb-4 flex">
        <div class="w-1/5">
          <% if !later.image_url.nil? %>
          <%= image_tag later.image_url, class: "pt-2" %>
          <% end %>
        </div>
        <div class="w-4/5">
          <div class="px-6 pt-2">
            <div class="font-bold text-xl mb-2"><%= later.title %></div>
            
            <p class="text-gray-700 text-base">
              <%= later.description %>
            </p>
          </div>
          <div class="px-6 pb-4 pt-2 flex justify-between">
            <span class="inline-block rounded-full text-sm font-semibold text-gray-700 mr-2 py-1 ">
              <%= distance_of_time_in_words(Time.now.utc, later.created_at) %> ago
            </span>
            <%= link_to later.url do %>
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">Direct link</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div> 
  <div class="flex w-full mb-4">
    <%= link_to remind_signups_path, class: "w-full py-4" do %>
      <div class="flex">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M0 0h24v24H0z" fill="none"/><path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/></svg> 
        <h1 class="ml-2">Back to Subscribers</h1>
      </div> 
    <% end %>
  </div> 
</div>